<?php
$code = $this->getParam('code', 500);
$errorID = $this->getParam('errorID', 'xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx');
$message = $this->getParam('message', '');
$projectName = $this->getParam('projectName', '');
$projectURL = $this->getParam('projectURL', '');

$locale = $this->getParam("locale");
/** @var Utopia\Locale\Locale $locale */
?>

<section class="zone large margin-top padding">
    <h1 class="margin-bottom"><?php echo $locale->getText("general.error.title"); ?> <?php echo $code; ?></h1>

    <p><?php echo $message; ?></p>

    <small><?php echo $locale->getText("general.error.error-id-title"); ?>: <?php echo $errorID; ?></small>

    <?php if (!empty($projectURL)): ?>
        <hr class="margin-top margin-bottom" />

        <p><a href="<?php echo $this->escape($projectURL); ?>" rel="noopener"><?php echo $locale->getText("general.error.button-back"); ?> <?php echo $projectName; ?></a></p>
    <?php endif; ?>
</section>
